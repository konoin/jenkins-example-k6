stage('Install K6') {
    steps {
        script {
            def k6Exists = sh(script: 'command -v k6', returnStatus: true) == 0
            if (!k6Exists) {
                echo 'Installing k6...'
                sh 'sudo apt update && sudo apt install -y k6'
            } else {
                echo 'K6 is already installed.'
            }
        }
    }
}
