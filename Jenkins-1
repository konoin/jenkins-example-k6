pipeline {
    agent any 
    stages {
        stage('Install K6') {
            steps {
                script {
                    echo 'Installing K6...'
                    sh 'apt update && apt install -y k6'
                }
            }
        }
        stage('Run K6') {
            steps {
                script {
                    echo 'Running K6...'
                    sh 'k6 run script.js'
                }
            }
        }
    }
}
