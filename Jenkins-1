pipeline {
    agent any 
    stages {
        stage('Checkout SCM') {
            steps {
               git branch: 'main', url: 'https://github.com/konoin/jenkins-example-k6.git'
            }
        }
        stage('Run K6') {
            steps {
                script {
                    echo 'Running K6 tests...'
                    sh 'k6 cloud script.js'
                }
            }
        }
    }
}
